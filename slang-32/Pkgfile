# Description: S-Lang programmer's library
# URL: http://www.jedsoft.org/slang/
# Maintainer: Tim Biermann, tbier at posteo dot de
# Depends on: libpng

name=slang-32
version=2.3.2
release=1
source=(https://www.jedsoft.org/releases/${name:0:5}/${name:0:5}-$version.tar.bz2)

build() {
  cd ${name:0:5}-$version

  ./configure --prefix=/usr \
    --libdir=/usr/lib32 \
    --disable-nls
  make -j1
  make -j1 DESTDIR=$PKG install

  rm -fr $PKG/usr/{bin,etc,share,include}
}
