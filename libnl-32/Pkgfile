# Description: Library providing APIs to netlink protocol based Linux kernel interfaces
# URL: http://www.infradead.org/~tgr/libnl/
# Maintainer: Tim Biermann, tbier at posteo dot de
# Depends on:
name=libnl-32
version=3.4.0
release=1
source=(https://github.com/thom311/libnl/releases/download/libnl${version//./_}/${name:0:5}-$version.tar.gz)

build() {
  cd ${name:0:5}-$version
  ./configure --prefix=/usr \
    --libdir=/usr/lib32 \
    --sysconfdir=/etc \
    --disable-cli
  make
  make DESTDIR=$PKG install
  rm -fr $PKG/usr/{bin,share,include}
  rm -fr $PKG/etc
}
