# Description: D-Bus GLib bindings
# URL: http://freedesktop.org/wiki/Software/DBusBindings
# Maintainer: Fredrik Rinnestam, fredrik at crux dot nu
# Depends on: dbus, glib

name=dbus-glib-32
version=0.110
release=1
source=(http://dbus.freedesktop.org/releases/${name:0:9}/${name:0:9}-$version.tar.gz)

build() {
  cd ${name:0:9}-$version
  ./configure --prefix=/usr \
    --libdir=/usr/lib32 \
    --disable-static \
    --enable-bash-completion=no
  make
  make DESTDIR=$PKG install
  rm -r $PKG/usr/{bin,share,include}
}
