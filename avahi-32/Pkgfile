# Description: A system which facilitates service discovery on a local network via the mDNS/DNS-SD protocol suite
# URL: http://www.avahi.org/
# Maintainer: Matt Housh, jaeger at crux dot ninja
# Depends on: libdaemon dbus gobject-introspection intltool

name=avahi-32
version=0.7
release=1
source=(http://avahi.org/download/${name:0:5}-$version.tar.gz)

build() {
  cd ${name:0:5}-$version
  ./configure --prefix=/usr \
    --libdir=/usr/lib32 \
    --with-distro=none \
    --disable-gtk \
    --disable-gtk3 \
    --disable-qt3 \
    --disable-qt4 \
    --disable-pygobject \
    --disable-python-dbus \
    --disable-mono \
    --disable-monodoc \
    --disable-nls \
    --enable-compat-libdns_sd
  make
  make DESTDIR=$PKG install
  rm -fr $PKG/usr/{bin,sbin,lib,etc,include,share}
}
